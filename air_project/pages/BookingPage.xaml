<Page x:Class="air_project.pages.BookingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:air_project.pages"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="800"
      Title="BookingPage">


    <Page.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FFE2C5BF"/>
            <Setter Property="Margin" Value="20 10 20 10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border CornerRadius="10" Background="{TemplateBinding Background}" BorderBrush="#FF947964" BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Candara"/>
            <Setter Property="FontSize" Value="20"/>

        </Style>
    </Page.Resources>
    <Grid Margin="5 10 5 0" x:Name="YourContainer">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"></RowDefinition>
                <RowDefinition Height="10"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="70"></RowDefinition>
                <RowDefinition Height="70"></RowDefinition>
                <RowDefinition Height="70"></RowDefinition>
                <RowDefinition Height="70"></RowDefinition>
                <RowDefinition Height="70"></RowDefinition>
                <RowDefinition Height="70"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{Binding ActualHeight, ElementName=middleRow, Mode=OneWay}"></ColumnDefinition>
                <ColumnDefinition Width="{Binding ActualHeight, ElementName=middleRow, Mode=OneWay}"></ColumnDefinition>
                <ColumnDefinition Width="{Binding ActualHeight, ElementName=middleRow, Mode=OneWay}"></ColumnDefinition>
                <ColumnDefinition Width="{Binding ActualHeight, ElementName=middleRow, Mode=OneWay}"></ColumnDefinition>
                <ColumnDefinition Width="{Binding ActualHeight, ElementName=middleRow, Mode=OneWay}"></ColumnDefinition>
                <ColumnDefinition Width="{Binding ActualHeight, ElementName=middleRow, Mode=OneWay}"></ColumnDefinition>
                <ColumnDefinition Width="{Binding ActualHeight, ElementName=middleRow, Mode=OneWay}"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="2" Grid.Column="0" Text="A" TextAlignment="Center" VerticalAlignment="Center" />
            <TextBlock Grid.Row="2" Grid.Column="1" Text="B" TextAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock Grid.Row="2" Grid.Column="2" Text="C" TextAlignment="Center" VerticalAlignment="Center"/>

            <TextBlock Grid.Row="2" Grid.Column="4" Text="D" TextAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock Grid.Row="2" Grid.Column="5" Text="E" TextAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock Grid.Row="2" Grid.Column="6" Text="F" TextAlignment="Center" VerticalAlignment="Center"/>

            <TextBlock Grid.Row="3" Grid.Column="3" Text="1" TextAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock Grid.Row="4" Grid.Column="3" Text="2" TextAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock Grid.Row="5" Grid.Column="3" Text="3" TextAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock Grid.Row="6" Grid.Column="3" Text="4" TextAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock Grid.Row="7" Grid.Column="3" Text="5" TextAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock Grid.Row="8" Grid.Column="3" Text="6" TextAlignment="Center" VerticalAlignment="Center"/>

        <Button Grid.Row="3" Grid.Column="0" x:Name="A1" Click="Button_Click"/>
        <Button Grid.Row="3" Grid.Column="1" x:Name="B1" Click="Button_Click"/>
        <Button Grid.Row="3" Grid.Column="2" x:Name="C1" Click="Button_Click"/>
        <Button Grid.Row="3" Grid.Column="4" x:Name="D1" Click="Button_Click"/>
        <Button Grid.Row="3" Grid.Column="5" x:Name="E1" Click="Button_Click"/>
        <Button Grid.Row="3" Grid.Column="6" x:Name="F1" Click="Button_Click"/>

        <Button Grid.Row="4" Grid.Column="0" x:Name="A2" Click="Button_Click"/>
        <Button Grid.Row="4" Grid.Column="1" x:Name="B2" Click="Button_Click"/>
        <Button Grid.Row="4" Grid.Column="2" x:Name="C2" Click="Button_Click"/>
        <Button Grid.Row="4" Grid.Column="4" x:Name="D2" Click="Button_Click"/>
        <Button Grid.Row="4" Grid.Column="5" x:Name="E2" Click="Button_Click"/>
        <Button Grid.Row="4" Grid.Column="6" x:Name="F2" Click="Button_Click"/>

        <Button Grid.Row="5" Grid.Column="0" x:Name="A3" Click="Button_Click"/>
        <Button Grid.Row="5" Grid.Column="1" x:Name="B3" Click="Button_Click"/>
        <Button Grid.Row="5" Grid.Column="2" x:Name="C3" Click="Button_Click"/>
        <Button Grid.Row="5" Grid.Column="4" x:Name="D3" Click="Button_Click"/>
        <Button Grid.Row="5" Grid.Column="5" x:Name="E3" Click="Button_Click"/>
        <Button Grid.Row="5" Grid.Column="6" x:Name="F3" Click="Button_Click"/>

        <Button Grid.Row="6" Grid.Column="0" x:Name="A4" Click="Button_Click"/>
        <Button Grid.Row="6" Grid.Column="1" x:Name="B4" Click="Button_Click"/>
        <Button Grid.Row="6" Grid.Column="2" x:Name="C4" Click="Button_Click"/>
        <Button Grid.Row="6" Grid.Column="4" x:Name="D4" Click="Button_Click"/>
        <Button Grid.Row="6" Grid.Column="5" x:Name="E4" Click="Button_Click"/>
        <Button Grid.Row="6" Grid.Column="6" x:Name="F4" Click="Button_Click"/>

        <Button Grid.Row="7" Grid.Column="0" x:Name="A5" Click="Button_Click"/>
        <Button Grid.Row="7" Grid.Column="1" x:Name="B5" Click="Button_Click"/>
        <Button Grid.Row="7" Grid.Column="2" x:Name="C5" Click="Button_Click"/>
        <Button Grid.Row="7" Grid.Column="4" x:Name="D5" Click="Button_Click"/>
        <Button Grid.Row="7" Grid.Column="5" x:Name="E5" Click="Button_Click"/>
        <Button Grid.Row="7" Grid.Column="6" x:Name="F5" Click="Button_Click"/>

        <Button Grid.Row="8" Grid.Column="0" x:Name="A6" Click="Button_Click"/>
        <Button Grid.Row="8" Grid.Column="1" x:Name="B6" Click="Button_Click"/>
        <Button Grid.Row="8" Grid.Column="2" x:Name="C6" Click="Button_Click"/>
        <Button Grid.Row="8" Grid.Column="4" x:Name="D6" Click="Button_Click"/>
        <Button Grid.Row="8" Grid.Column="5" x:Name="E6" Click="Button_Click"/>
        <Button Grid.Row="8" Grid.Column="6" x:Name="F6" Click="Button_Click"/>

        <Button Grid.Row="0" Grid.Column="0" IsEnabled="False" Background="Black"/>
        <TextBlock Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Text="Место приобретено" VerticalAlignment="Center" Margin="10"/>

        <Button Grid.Row="0" Grid.Column="4" IsEnabled="False"/>
        <TextBlock Grid.Row="0" Grid.Column="5" Grid.ColumnSpan="2" Text="Место свободно" VerticalAlignment="Center" Margin="10"/>
    </Grid>

</Page>
